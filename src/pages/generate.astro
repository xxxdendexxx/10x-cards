---
import Layout from "../layouts/Layout.astro";
import GenerateFlashcardsContainer from "../components/GenerateFlashcardsContainer";

// Set page metadata
const title = "Generate Flashcards | 10x Cards";
const description = "Generate flashcards from your text using AI to enhance your learning process.";
---

<Layout title={title} description={description}>
  <main class="container max-w-4xl mx-auto py-8 px-4 md:py-12">
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-2">Generate Flashcards</h1>
      <p class="text-gray-600">
        Paste your text below to generate flashcard proposals. You can review, edit, and approve the generated
        flashcards before saving them to your collection.
      </p>
    </div>

    <GenerateFlashcardsContainer client:load />
  </main>
</Layout>
